{% extends 'PumukitWebTVBundle::default.css.twig' %}

{% block body %}



{% set default_contrast_background = default_contrast_background | default("#033951") %} 
{% set content_max_width = "1350px" %}
{% set default_content_font = "#003c5e" %}
{% set default_light_font = "#e81657" %}
{% set panel_default_background = "#E9E9E9" %} {#E9E9E9#}
{% set panel_default_font = "#000" %}
{#{% set default_light_background = "" %}#}
{% set header_background = '#b7b6b6 url(' ~asset('bundles/pumukitgeantwebtv/images/header_bg_side.png')~'); background-size: contain;' %}
{% set big_breadcrumbs = true %}
{% set breadcrumbs_separator = " " %}
{% set page_background = 'white' %}
{% set mmobj_selected_background = '#E9E9E9' %}
{{ parent() }}
{# Add your own CSS rules #}
.icon-share:before {
    content: '\e1214';
    font-family: fontello;
}
a{
    color: {{default_light_font}};
}
a:hover{
    color: grey;
    border-bottom: 1px dotted grey;
}
a small {
    color: {{default_light_font}};
}
a small:hover {
    color: grey;
    border-bottom: 1px dotted grey;
}
.index_container a:hover {
    border-bottom: none;
}

.static_content p {
    margin: 10px 5px;
    text-align: justify;
}


body {
    font-family: "Segoe UI", "Segoe", Tahoma, Helvetica, 'Open Sans', Arial, sans-serif;
    font-weight: normal;
}

h1 {
    font-size: 36px;
    border-bottom: 4px solid {{default_content_font}};
}
h1.title-for-crumbs{
    border-bottom: 0px;
    font-weight: normal;
    font-size: 3.8em;
    display: none;
    margin: 40px 0px 10px;
}
.title-for-crumbs.no-hide {
    display:block;
}
.header-content{
    padding-top:10px;
}

footer{
    max-width: {{content_max_width}};
    margin: 0 auto;
    background: #0b4257;
    color: #fff;
    padding: 0px 10px 20px;
}
.footer_row {
    background: #0b4257;
    color: #fff;
}
#footer-links a{
    color: #fff;
}
#footer-links li {
    float: left;
    list-style-type: none;
    background-image: url('{{asset('bundles/pumukitgeantwebtv/images/bullet.png')}}');
    background-repeat: no-repeat;
    background-position: left;
    padding-right: 5px;
    padding-left: 11px;
}
#footer-links li:first-child {
background: none;
}
{# STATIC PAGES #}
.static_content h2{
    font-size: 36px;
    font-weight: bold;
    line-height: 1.16667em;
    padding: .5em 0;
}
.static_content{
    font-size: 16px;
    color: {{default_content_font}};
}
{# END STATIC PAGES#}
{# CATEGORIES PAGE #}
.channel-list h2 {
    font-size: 22px;
    line-height: 1.36364em;
    margin-bottom: 22px;
￼    padding: .31818em 0;
    font-weight: bold;
}
.channel-list p {
    font-size: 16px;
    line-height: 1.5em;
}
.channel-list ul {
    margin-bottom: 20px;
}
{# END CATEGORIES PAGE #}
abbr[title]  {
    text-decoration: none;
    border-bottom: none;
    cursor: pointer;
}
.mmobj-numviewed {
    float:right;
    font-size: 0.9em;
}
.number-videos.serial {
    position: absolute;
    top: 0px;
    left: 5px;
    z-index: 10;
}
.number-videos.serial p {
    z-index:10;
    color: white;
    background: black;
    display: inline;
    text-align: center;
    opacity: 0.50;
    font-size: 0.85em;
    padding: 1px 2px;
}
.pumukit_album .thumbnailholder {
    background: #f3f3f3;
}
.title.tagcatalogue {
    font-size: 1.2em;
    margin-left: 20px;
    margin-top: 2px;
}
.thumbnail {
    height: 103px;
    width: 137px;
    padding: 2px;
}
.thumbnail img.thumbnailimg{
    height: 100%;
    max-width: 133px;
    max-height: 99px;
    padding: 0px;
}
.thumbnailholder {
    width: 133px;
    height: 99px;
    top: 2px;
    left: 2px;
}

.date.mmobj {
    left: 157px;
}

.info .title, .info .title a {
    color: {{default_light_font}};
    cursor: pointer;
    font-size: 1em;
    font-weight: 800;
    font-family: 'Arial Narrow', Arial;
    font-stretch: condensed;
}
.info .title.tagcatalogue {
      height: auto;
      overflow:hidden;
}
.info .description {
    margin: 5px 20px;
}
.mmobj_thumbnail_title:hover {
    border-bottom: 1px dotted grey;
}
.pumukit_mmobj:hover .info .title {
    color: grey;
    text-decoration-style: dotted;
    -moz-text-decoration-style: dotted;
    -webkit-text-decoration-style: dotted;
}
.pumukit_mmobj.pumukit_repository{
    height:auto;
    min-height:124px;
    max-height:17em;
}
.main_menu_text {
    color: {{default_content_font}};
    font-size: 16px;
    margin: 30px 0;
}

.play_icon {
    margin: 5px;
    margin-left: 8px;
    background-image: url("{{asset('bundles/pumukitgeantwebtv/images/play_icon.png')}}");
    width: 18px;
    height: 13px;
}
.play_icon.small {
    width: 18px;
    height: 13px;
}
.index_widget {
    margin-top: 50px;
    margin-bottom: 50px;
}
.breadcrumb li {
    background-image: url("{{asset('bundles/pumukitgeantwebtv/images/crumbs_arrow.png')}}");
    background-repeat: no-repeat;
    background-position: right 0;
    padding-right: 10px;
}
.breadcrumb li:last-of-type {
    background-image: none;
    font-size: 3.8em;
}

.widget.slidebar a{
    font-weight: normal;
    font-size: 1em;
    border-bottom: 1px dotted grey;
    padding-left: 5px;
}
.widget.slidebar a:hover, .widget.slidebar a.selected{
    background: #e9e9e9;
    color: #000;
    margin-left: 0px;
    padding-left: 5px;
    z-index: 10;
    transition: background 0.3s ease;
}
.widget.slidebar a.selected {
    font-weight: bold;
    background: none;
    color: {{default_light_font}};
}
.widget.slidebar::before {
    content: "Menu";
    font-size: 1.25em;
    font-weight: bold;
    color: #004361;
    line-height: 24px;
    border-bottom: 0;
    margin-bottom: 10px;
    padding-left: 5px;
}
.menu.navbar {
    margin-top: 10px;
    padding-right: 30px;
}
.pumukit_mmobj {
    border-radius: 0;
}
{# #}
select.form-control {
    background: {{default_contrast_background}};
    color: #fff;
}
#form_search {
    padding-top: 10px;
    color: {{default_light_font}};
    background: {{panel_default_background}};
    margin: 20px 30px 60px;

}
#form_search label{
    font-weight: normal;
}
#search {
    border-radius: 4px;
    border-right: 0;
    border-bottom-right-radius: 0;
    border-top-right-radius: 0;
    box-shadow: none;
    background: #f3f3f3;
}
#form_search button:last-child {
    border:0;
    background:transparent;
}
#form_search .input-group-addon:last-child {
    background: #f3f3f3;
}
#form_search input.btn-default.form-control {
    background: #f3f3f3;
    background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#fff), color-stop(25%, #fff), to(#e6e6e6));
    ￼background-image: -webkit-linear-gradient(#fff, #fff 25%, #e6e6e6);
    background-image: -moz-linear-gradient(top, #fff, #fff 25%, #e6e6e6);
    background-image: -o-linear-gradient(#fff, #fff 25%, #e6e6e6);
    ￼background-image: linear-gradient(#ffffff,#ffffff 25%,#e6e6e6);
    ￼background-repeat: no-repeat;
    background-repeat-x: no-repeat;
    background-repeat-y: no-repeat;
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#FFFFFFFF', endColorstr='#FFE6E6E6', GradientType=0);
}
.form-group .input-group.date .form-control,form-group .input-group.date .form-control,.form-group .input-group.date .input-group-addon{
    background: {{default_contrast_background}} !important;
    border: none;
    color: #fff;
}
.form-group .input-group.date *::-webkit-input-placeholder {
    color: #fff;
}
.form-group .input-group.date *:-moz-placeholder {
    /* FF 4-18 */
    color: #fff;
}
.form-group .input-group.date *::-moz-placeholder {
    /* FF 19+ */
    color: #fff;
}
.form-group .input-group.date *:-ms-input-placeholder {
    /* IE 10+ */
    color: #fff;
}
.bootstrap-datetimepicker-widget {
    color: {{default_contrast_background}};
}
.search_group_date {
    font-weight:bold;
    font-size:2.7em;
    margin-left:15px;
    margin-bottom: 40px;
}
{# #}
.info-wrapper {
    overflow: hidden;
}
.pumukit_mmobj{
    overflow: hidden;
}
.pumukit_mmobj .info {
    width: 100%;
}
.cover {
    background: #e9e9e9;
    opacity: 1;
    font-weight: normal;
    padding: 5px 5px 5px 15px;
}
a:hover .cover {
    background: #e9e9e9;
    font-weight: normal;
    color: {{default_light_font}};
}
@media (max-width: 767px) {
    .main-content {
        max-width: 500px;
    }
}
@media (max-width: 425px) {
    .mmobj-numviewed {
        display: none;
    }
}
.powered_by-wrapper {

}
.powered_by a {
    color: white;
}

.video-duration {
    bottom: initial;
    right: initial;
    top: 8%;
    left: 8%;
    position: absolute;
    background:rgba(0,0,0,0.65);
    padding: 1px 3px;
}
{% endblock %}
