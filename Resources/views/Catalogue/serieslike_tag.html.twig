{% set col_mapper = {'1': 'col-md-12', '2': 'col-md-6', '3': 'col-md-4', '4': 'col-md-3'} %}
{% set col_class = ( col_mapper[cols|default('1')] | default(col_mapper['1'] ) ) %}
<div class="{{ col_class }} nopadding">
    <div class="pumukit_mmobj">
        <a href="{{ path_to_tag(tag.cod) }}">
            <figure class="pumukit_album">
                <div class="thumbnail thumbnailo"><div class="thumbnailholder" ></div><img class="thumbnailimg" src="{{ asset( tag.getProperty('thumbnail_url') )}} " /></div>
                <div class="thumbnail thumbnailo"><div class="thumbnailholder" ></div><img class="thumbnailimg" src="" /></div>
                <div class="thumbnail thumbnailo"><div class="thumbnailholder" ></div><img class="thumbnailimg" src="" /></div>
                <span class="number-videos serial"><p>
                    {{tag.numberMultimediaObjects}} {{tag.numberMultimediaObjects>1?'videos':'video'}}</p>
                </span>
            </figure>
        </a>
        <div class="info-wrapper">
          <div class="info">
            <div class="title tagcatalogue">
              <a href="{{ path_to_tag(tag.cod) }}">
                {{tag.title | default('No title')|trans}}
              </a>
              <a href="{{ path('pumukit_webtv_categories_index', {'provider': tag.cod })}}">
                <span class="glyphicon glyphicon-share"></span>
              </a>
            </div>
            <div class="description">
              <div class="hidden-xs" style="overflow:hidden;height:4.2em;">
                {{tag.getProperty('description')}}
              </div>
              <div class="visible-xs" style="overflow:hidden;height:5.7em;text-overflow:ellipsis; width:100%;white-space: nowrap;">
                {{tag.getProperty('description')}}
              </div>
            </div>
          </div>
        </div>
    </div>
</div>
