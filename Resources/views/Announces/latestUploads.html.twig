{% extends 'PumukitWebTVBundle::layout.html.twig' %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/pumukitwebtv/js/announces_ajax.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
  <h1 class="title-for-crumbs">{{template_title}}</h1>
  <p class="main_menu_text">
    Latest recordings made by this service, or provided by other organizations, which are available to the audience, ordered by recording or publishing date
  </p>
  <div class="announces" id="announces">
    {% for object in last %}
      {% if object.isCollection() %}
        <!-- Series -->
        {% include 'PumukitWebTVBundle:Misc:series.html.twig' with {'cols': number_cols }%}
      {% else %}
        <!-- Multimedia object -->
        {% include 'PumukitWebTVBundle:Misc:multimediaobject.html.twig' with {'cols': number_cols }%}
      {% endif %}
    {% else %}
      There are no multimedia objects.
    {% endfor %}
  </div>
{% endblock %}
