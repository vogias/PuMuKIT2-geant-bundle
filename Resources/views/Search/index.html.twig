{% extends 'PumukitWebTVBundle::layout.html.twig' %}

{% block body %}
  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-12">
            {% if blocked_tag is defined and blocked_tag is not null %}
            <h1 class="title-for-crumbs no-hide">{{ blocked_tag.title }}</h1>
            {% else %}
            <h1 class="title-for-crumbs">
                {% if template_title %}
                    {{ template_title |trans }}
                {% else %}
                    {% if type == "series"%}
                        {% trans %}Series search{% endtrans %}
                    {% else %}
                        {% trans %}Multimedia object search{% endtrans %}
                    {% endif %}
                {% endif %}
            </h1>
            <h1 class="title-for-crumbs no-hide"> Search Results: </h1>
            {% endif %}
        </div>
      </div>
      <div class="row">
    	{% include 'PumukitWebTVBundle:Search:list.html.twig' %}
      </div>
      {% if objects|length > 0%}
      <div class="row">
        {% include 'PumukitWebTVBundle:Misc:pager.html.twig' %}
      </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
